[ {
  "extension" : "revapi.java",
  "id" : "java",
  "configuration" : {
    "missing-classes" : {
      "behavior" : "report",
      "ignoreMissingAnnotations" : false
    }
  }
}, {
  "extension" : "revapi.filter",
  "configuration" : {
    "elements" : {
      "include" : [ {
        "matcher" : "java-package",
        "match" : "/io\\.smallrye\\.reactive\\.messaging(\\..+)?/"
      }, {
        "matcher" : "java-package",
        "match" : "/org\\.eclipse\\.microprofile\\.reactive\\.messaging(\\..+)?/"
      } ]
    }
  }
}, {
  "extension" : "revapi.differences",
  "id" : "breaking-changes",
  "configuration" : {
    "criticality" : "highlight",
    "minSeverity" : "POTENTIALLY_BREAKING",
    "minCriticality" : "documented",
    "differences" : [
        {
            "ignore": true,
            "code": "java.field.enumConstantOrderChanged",
            "old": "field io.smallrye.reactive.messaging.MediatorConfiguration.Consumption.MESSAGE",
            "new": "field io.smallrye.reactive.messaging.MediatorConfiguration.Consumption.MESSAGE",
            "justification": "New consumption value to describe KeyedMulti injection"
        },
        {
            "ignore": true,
            "code": "java.field.enumConstantOrderChanged",
            "old": "field io.smallrye.reactive.messaging.MediatorConfiguration.Consumption.NONE",
            "new": "field io.smallrye.reactive.messaging.MediatorConfiguration.Consumption.NONE",
            "justification": "New consumption value to describe KeyedMulti injection"
        },
        {
            "ignore": true,
            "code": "java.field.enumConstantOrderChanged",
            "old": "field io.smallrye.reactive.messaging.MediatorConfiguration.Consumption.PAYLOAD",
            "new": "field io.smallrye.reactive.messaging.MediatorConfiguration.Consumption.PAYLOAD",
            "justification": "New consumption value to describe KeyedMulti injection"
        },
        {
            "ignore": true,
            "code": "java.method.addedToInterface",
            "new": "method java.lang.reflect.Type io.smallrye.reactive.messaging.MediatorConfiguration::getKeyType()",
            "justification": "New method to extract the type of the key when using the KeyedMulti"

        },
        {
            "ignore": true,
            "code": "java.method.addedToInterface",
            "new": "method java.lang.Class<? extends io.smallrye.reactive.messaging.keyed.KeyValueExtractor> io.smallrye.reactive.messaging.MediatorConfiguration::getKeyed()",
            "justification": "New method to extract the extractor class name (@Keyed) when using the KeyedMulti"
        },
        {
            "ignore": true,
            "code": "java.method.addedToInterface",
            "new": "method java.lang.reflect.Type io.smallrye.reactive.messaging.MediatorConfiguration::getValueType()",
            "justification": "New method to extract the type of the value when using the KeyedMulti"
        }
    ]
  }
}, {
  "extension" : "revapi.reporter.json",
  "configuration" : {
    "minSeverity" : "POTENTIALLY_BREAKING",
    "minCriticality" : "documented",
    "output" : "target/compatibility.json",
    "indent" : true,
    "append" : false,
    "keepEmptyFile" : true
  }
}, {
  "extension" : "revapi.reporter.text",
  "configuration" : {
    "minSeverity" : "POTENTIALLY_BREAKING",
    "minCriticality" : "documented",
    "output" : "out"
  }
} ]
